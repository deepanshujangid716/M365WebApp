@model IEnumerable<M365WebApp.Models.MailboxItemViewModel> 

@{
    ViewData["Title"] = "Recent Activity";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h2 class="fw-light">Welcome back, <strong>@ViewData["DisplayName"]</strong></h2>
            <p class="text-muted">@ViewData["JobTitle"] | @ViewData["OfficeLocation"]</p>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Mailbox Activity</h5>
                    <span class="badge bg-info">Top 10</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sender</th>
                                <th>Subject & Preview</th>
                                <th>Received</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Sender</strong></td>
                                <td>
                                    <a href="@item.WebLink" target="_blank" class="text-decoration-none">
                                        <div class="text-primary fw-600">@item.Subject</div>
                                    </a>
                                </td>
                                <td>@item.ReceivedDateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>